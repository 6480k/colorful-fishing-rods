                },
                "atravita.SpamMail.JojaFall": {
                    "Trigger": "DayStarted",
                    "Condition": "SEASON fall, !PLAYER_HAS_CONVERSATION_TOPIC atravita.SpamMail.JojaSummer, PLAYER_HAS_MAIL_RECEIVED atravita.SpamMail.JojaSummer, RANDOM 0.1",
