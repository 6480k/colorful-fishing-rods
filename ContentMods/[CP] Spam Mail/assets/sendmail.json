                "atravita.SpamMail.Castle": {
                    "Trigger": "DayStarted",
                    "Condition": "PLAYER_HAS_MAIL_RECEIVED atravita.SpamMail.Aquarium, !PLAYER_HAS_CONVERSATION_TOPIC atravita.SpamMail.Aquarium, !PLAYER_HAS_CONVERSATION_TOPIC atravita.SpamMail.Zoo, RANDOM 0.1, {{LateYearConstraint}}",
                    "Action": "AddMail Current atravita.SpamMail.Castle"
                },
